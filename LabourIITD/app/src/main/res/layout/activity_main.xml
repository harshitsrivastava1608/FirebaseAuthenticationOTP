<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Press On The Speak to get Question"
        android:layout_margin="10dp"
        android:layout_marginBottom="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitch"
        android:textSize="16sp"
        android:layout_below="@+id/editText"
        android:layout_marginTop="20dp"
        android:id="@+id/txtques"/>
    <SeekBar
        android:id="@+id/seek_bar_pitch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:progress="50"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txtques"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed"
        android:textSize="16sp"
        android:id="@+id/speed"
        android:layout_below="@id/seek_bar_pitch"/>
    <SeekBar
        android:layout_below="@+id/speed"
        android:id="@+id/seek_bar_speed"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:progress="50"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="166dp"
        />
    <Button
        android:layout_below="@id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak!!"
        android:id="@+id/btn_speak"
        android:layout_margin="50dp"
       android:layout_alignParentRight="true"
        android:enabled="false"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Next"
        android:onClick="changeQ"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See Your Answer Here"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:id="@+id/txtOutput"/>
    <Button
        android:id="@+id/btn_mic"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/black"
        android:text="Tap To Open Mic To Answer"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:onClick="btnSpeech"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Steps:1.Speak(Ques);2.Mic(Ans);3.Next"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        android:layout_above="@id/txtOutput"/>
    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:layout_above="@id/txtOutput"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/white"
        />
</RelativeLayout>